{
  "name": "sst-http",
  "version": "0.2.2",
  "description": "Decorator-based routing for SST v3 with a single Lambda and Firebase JWT authorizer.",
  "license": "MIT",
  "author": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pkhadson/sst-http.git"
  },
  "bugs": {
    "url": "https://github.com/pkhadson/sst-http/issues"
  },
  "homepage": "https://github.com/pkhadson/sst-http#readme",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./infra": {
      "types": "./dist/infra.d.ts",
      "import": "./dist/infra.js",
      "require": "./dist/infra.cjs"
    }
  },
  "bin": {
    "sst-http": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@9",
  "scripts": {
    "build": "tsup src/index.ts src/infra.ts src/cli.ts --dts --format esm,cjs --clean",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "pnpm clean",
    "prepublishOnly": "pnpm build",
    "prerelease": "pnpm lint && pnpm typecheck && pnpm build",
    "release": "pnpm publish --access public",
    "release:patch": "pnpm version patch && pnpm run release",
    "release:minor": "pnpm version minor && pnpm run release",
    "release:major": "pnpm version major && pnpm run release",
    "release:dry": "pnpm publish --access public --dry-run"
  },
  "dependencies": {
    "path-to-regexp": "^8.2.0",
    "reflect-metadata": "^0.2.2",
    "ts-morph": "^23.0.0",
    "tslib": "^2.6.2"
  },
  "peerDependencies": {
    "sst": "^3.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/aws-lambda": "^8.10.119",
    "@types/node": "^20.11.0",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "tsup": "^8.0.1",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.46.0",
    "zod": "^4.1.12"
  },
  "publishConfig": {
    "access": "public"
  }
}
